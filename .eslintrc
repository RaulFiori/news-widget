{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["prettier", "react-hooks", "import"],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "react-hooks/rules-of-hooks": "error", 
    "react-hooks/exhaustive-deps": "warn" ,
    "no-unused-vars": "error",
    "react/forbid-prop-types": ["any", "array"],
    "import/imports-first": ["error", "absolute-first"],
    "prettier/prettier": ["error", {"singleQuote": true, "printWidth": 80, "trailingComma": "none"}]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "jest": true,
    "es6": true
  }
}